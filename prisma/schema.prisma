generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider          = "postgresql"
  url               = env("POSTGRES_PRISMA_URL")
  directUrl         = env("POSTGRES_URL_NON_POOLING")
  shadowDatabaseUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  image         String?
  firstName     String
  lastName      String
  slug          String      @unique
  createdAt     DateTime    @default(now())
  updatedAt     DateTime?   @updatedAt

  isAdmin       Boolean     @default(false)
  gender        Gender      @default(Female)

  // Relationships
  canEdit          User[]  @relation("UserEditionRelation")
  canBeEditedBy    User[]  @relation("UserEditionRelation")

  // PROFIL
  hasCar                          Boolean @default(false)

  // Do you have food restrictions ?
  hasFoodRestrictions             Boolean @default(false)
  foodRestrictions                String?

  // PRESENCE LE JEUDI
  thursdayWillAttend              Boolean @default(false)
  thursdayWillNeedShuttleGoing    Boolean @default(false)
  thursdayWillNeedShuttleBack     Boolean @default(false)

  // PRESENCE LE VENDREDI
  fridayWillAttend                Boolean @default(false)
  fridayWillNeedShuttleGoing      Boolean @default(false)
  fridayWillNeedShuttleBack       Boolean @default(false)


  // PRESENCE LE SAMEDI
  saturdayWillAttendLunch         Boolean @default(false)
  saturdayWillAttendBeach         Boolean @default(false)
  saturdayWillAttendDinner        Boolean @default(false)

  saturdayWillNeedShuttleGoing    Boolean @default(false)
  saturdayWillNeedShuttleBack     Boolean @default(false)

  // HAS RESPONDED
  hasResponded                    Boolean @default(false)

  // HAS CONNECTED
  hasConnected                    Boolean @default(false)

}

enum Gender {
  Male
  Female
}
